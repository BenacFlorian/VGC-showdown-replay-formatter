{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "base/*.json",
        "outDir": "dist/base",
        "watchAssets": true
      }
    ],
    "watchAssets": true,
    "builder": "swc",
    "typeCheck": true
  }
}
